---
// Props para NavLink
interface Props {
  href: string;
  label: string;
}

const { href, label } = Astro.props;
const currentPath = Astro.url.pathname;
const isActive = currentPath === href;
---

<a
  href={href}
  class:list={[
    "px-4 py-2 text-gray-600 hover:text-white  hover:border-2 rounded transition",
    { "rounded-md bg-gray-900 px-3 py-2 text-sm font-medium text-white": isActive }
  ]}
>
  {label}
</a>
